@model List<Training0302.Models.EMPLOYEE>



@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã nhân viên</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Giới tính</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Tùy chọn</th>



            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr id="row-@item.ID">
                    <td contenteditable="false">@item.ID</td>
                    <td contenteditable="false">@item.NAME</td>
                    <td contenteditable="false">@item.BIRTHDAY</td>
                    <td contenteditable="false">@(item.GENDER == true ? "Nam" : "Nữ")</td>
                    <td contenteditable="false">@item.ADDRESS</td>
                    <td contenteditable="false">@item.EMAIL</td>
                    <td contenteditable="false">@item.PHONE</td>
                    <td><button class="btn btn-primary">Sửa</button><br /><br />
                    <button class="btn btn-danger">Xóa</button></td>

                </tr>


            }
            <tr class="row-list hide">
                <td contenteditable="false" class="td-id"></td> 
                <td contenteditable="false" class="td-name"></td>
                <td contenteditable="false" class="td-birthday"></td>
                <td contenteditable="false" class="td-gender"></td>
                <td contenteditable="false" class="td-address"></td>
                <td contenteditable="false" class="td-email"></td>
                <td contenteditable="false" class="td-phone"></td>
                <td><button class="btn btn-primary">Sửa</button><br /><br />
                <button class="btn btn-danger">Xóa</button></td>
            </tr>




        </tbody>
    </table>
}
else
{
    <span>Không tìm thấy kết quả</span>}
